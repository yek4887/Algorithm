#선형 리스트 처리 프로그램(생성, 삽입, 삭제 등이 모두 결합): p.105
#데이터 생성 함수 선언


# 전역변수 선언
kakaotalk = ["가을", "레이", "원영", "리즈", "이서"]

# 데이터 추가 함수 선언
def add_data(friend):
    kakaotalk.append(None)
    k_len = len(kakaotalk)  # 수정: k_len = len(kakaotalk)
    kakaotalk[k_len - 1] = friend

# 데이터 삽입 함수 선언
def insert_data(position, friend):
    if position < 0 or position > len(kakaotalk):
        print("데이터를 삽입할 범위를 벗어났습니다.")
        return

    kakaotalk.append(None)  # 빈칸 추가
    k_len = len(kakaotalk)  # 배열의 현재 크기 계산
    print(k_len)
    for i in range(k_len - 1, position, -1):
        kakaotalk[i] = kakaotalk[i - 1]  # i-1 위치의 인덱스가 i 위치로 이동
        kakaotalk[i - 1] = None

    kakaotalk[position] = friend

# 데이터 삭제 함수 선언
def delete_data(position):  # 삭제할 위치를 매개변수로 받음
    if position < 0 or position >= len(kakaotalk):  # 범위 초과
        print("데이터를 삭제할 범위를 벗어났습니다.")
        return

    k_len = len(kakaotalk)  # 현재 배열 계산
    kakaotalk[position] = None  # position에 해당하는 데이터 삭제
    for i in range(position + 1, k_len):
        kakaotalk[i - 1] = kakaotalk[i]  # 왼쪽으로 이동
        kakaotalk[i] = None  # 이동한 값의 인덱스를 빈칸으로 만듬

    del(kakaotalk[k_len - 1])  # 맨 뒤 데이터는 삭제

# 메인 코드
if __name__ == "__main__":
    select = 0  # 초기값 설정 (초기값을 설정하지 않으면 오류 발생)
    
    while (select != 4):
        select = int(input("선택하세요(1: 추가 2: 삽입 3: 삭제 4:종료)-->"))
        
        if (select == 1):
            data = input("추가할 데이터: ")
            add_data(data)
            print(kakaotalk)
        elif (select == 2):
            pos = int(input("삽입할 위치: "))
            data = input("추가할 데이터: ")
            insert_data(pos, data)
            print(kakaotalk)
        elif (select == 3):
            pos = int(input("삭제할 위치: "))
            delete_data(pos)
            print(kakaotalk)
        elif (select == 4):
            print(kakaotalk)
            exit()  # 수정: exit()로 호출
        else:
            print("1~4 중 하나를 입력하세요:")
            continue
